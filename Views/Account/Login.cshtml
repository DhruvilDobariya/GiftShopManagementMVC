@model GiftShopManagement.ViewModels.Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GiftShopManagement</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fortawesome/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/datatable/dataTables.bootstrap5.min.css"/>
    <link rel="stylesheet" href="~/toastr/build/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GiftShopManagement.styles.css" asp-append-version="true" />
	<style>
    	html, body {
    		height: 100%;
    		background-color: white;
    	}
        li{
            list-style : none;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-4">
            <div class="box">
                <main class="form-signin m-3 p-3 pt-5">
                    <form class="" method="post">
                        <div class="d-flex justify-content-center">
                            <img class="mb-4" src="~/favicon.png" alt="" width="72" height="72">
                        </div>
                        <div class="d-flex justify-content-center">
                            <h1 class="h3 fw-normal">Welcome</h1>
                        </div>
                        <div class="d-flex justify-content-center">
                            <p>Sign in with your id</p>
                        </div>
                        <div class="form-floating">
                            <input type="text" asp-for="UserName" class="form-control" placeholder="admin" />
                            <label for="floatingInput" asp-for="UserName"></label>
                        </div>

                        <div class="form-floating">
                            <input type="password" asp-for="Password" class="form-control" placeholder="admin" />
                            <label for="floatingInput" asp-for="Password"></label>
                        </div>
                        <div class="mt-2 text-center">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                            <label for="floatingInput" asp-for="RememberMe"></label>
                        </div>
                        <button type="submit" class="w-100 btn btn-danger btn-lg my-3">Login</button>
                        <div class="text-center text-danger text-center pe-4" asp-validation-summary="All">
                            
                        </div>
                    </form>
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/datatable/jquery.dataTables.min.js"></script>
    <script src="~/datatable/dataTables.bootstrap5.min.js"></script>
    <script src="~/fortawesome/fontawesome-free/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>