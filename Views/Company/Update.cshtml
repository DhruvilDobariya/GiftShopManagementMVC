@model Company
@{
    ViewData["Title"] = "Update - Company";
}
<div class="border p-4">
    <div>
        <h2>
            Update Company
        </h2>
    </div>
    <div>
        <form method="post">
            <div class="row mt-2">
                <div>
                    <input asp-for="CompanyId" hidden/>
                    <input asp-for="ModificationDate" hidden />
                    <input asp-for="CreationDate" hidden/>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for=CompanyName></label>
                    <input type="text" class="form-control" asp-for="CompanyName" />
                    <span class="text-danger" asp-validation-for="CompanyName"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for=AuthorizedPersonName></label>
                    <input type="text" class="form-control" asp-for="AuthorizedPersonName" />
                    <span class="text-danger" asp-validation-for="AuthorizedPersonName"></span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label" asp-for=Email></label>
                    <input class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label" asp-for=MobileNo></label>
                    <input class="form-control" asp-for="MobileNo" />
                    <span class="text-danger" asp-validation-for="MobileNo"></span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <label class="form-label" asp-for=Address></label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="Company" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

