@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}

<div class="row border">
    <div class="row m-2 mt-4">
        <h2 class="col-md-6">
            <i class="fa-solid fa-earth-americas"></i>
            Company
        </h2>
        <div class="col-md-6 text-end">
            <a class="btn btn-danger" asp-controller="Country" asp-action="Create">
                <i class="fa-solid fa-plus"></i>
                Add Company
            </a>
        </div>
    </div>
    <div class="row m-2">
        <table class="table table-hover" id="table">
            <thead class="header2 text-light">
                <th>Name</th>
                <th>Creation Date</th>
                <th class="text-center">Edit</th>
                <th class="text-center">Delete</th>
            </thead>
            <tbody>
                @foreach (var company in @Model)
                {
                    <tr>
                        <td>@company.CompanyName</td>
                        <td>@company.CreationDate</td>
                        <td class="text-center">
                            <a class="btn btn-gradient" asp-controller="Country" asp-action="Update" asp-route-Id="@company.CompanyId">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-danger" asp-controller="Country" asp-action="Delete" asp-route-Id="@company.CompanyId">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>