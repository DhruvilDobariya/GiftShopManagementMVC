@model GiftType
@{
    ViewData["Title"] = "Update - Gift Type";
}
<div class="border p-4">
    <div>
        <h2>
            Update Gift Type
        </h2>
    </div>
    <div>
        <form method="post">
            <div class="row mt-2">
                <div>
                    <input asp-for="GiftTypeID" hidden/>
                    <input asp-for="ModificationDate" hidden />
                    <input asp-for="CreationDate" hidden/>
                </div>
                <div class="col-md-12">
                    <label class="form-label" asp-for=GiftTypeName></label>
                    <input type="text" class="form-control" asp-for="GiftTypeName" />
                    <span class="text-danger" asp-validation-for="GiftTypeName"></span>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-gradient" type="submit">Submit</button>
                <a class="btn btn-danger" type="button" asp-controller="GiftType" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}